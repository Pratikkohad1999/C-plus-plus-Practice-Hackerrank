#include <iostream>
#include <string>
using namespace std;

int main() 
{
    string s1,s2,s3;
    char b,a;
    int s11,s12;
    //1st String 
    cin>>s1;
    //2nd string 
      cin>>s2;
    
    //1st string size
    s11 = s1.size();
    //2nd string size
    s12 = s2.size();
    cout<<s11;
    cout<<" "<<s12;
    
    //  CONCATENATE Both String and output in Third
    s3 = s1+s2;
    cout<<"\n"<<s3;
    
    // a' b'
    a = s2[0];
    b = s1[0];        
    s1[0] = a;
    s2[0] = b;
    cout<<"\n";
    cout<<s1;
    cout<<" "<<s2;
    return 0;
}
